{
  "expo": {
    "name": "LogiDrive",
    "slug": "LogiDrive",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-localization",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(LOGIDRIVE) to access your camera",
          "microphonePermission": "Allow $(LOGIDRIVE) to access your microphone",
          "recordAudioAndroid": true
        }
      ],
      [
        "expo-barcode-scanner",
        {
          "cameraPermission": "Allow $(LOGIDRIVE) to access camera."
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow $(LOGIDRIVE) to use your location."
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "Allow $(LOGIDRIVE) to access your photos.",
          "savePhotosPermission": "Allow $(LOGIDRIVE) to save photos.",
          "isAccessMediaLocationEnabled": true
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "fonts": [
      {
        "asset": "./assets/fonts/Urbanist-Black.ttf",
        "family": "Urbanist-Black"
      },
      {
        "asset": "./assets/fonts/Urbanist-Bold.ttf",
        "family": "Urbanist-Bold"
      },
      {
        "asset": "./assets/fonts/Urbanist-ExtraBold.ttf",
        "family": "Urbanist-ExtraBold"
      },
      {
        "asset": "./assets/fonts/Urbanist-Medium.ttf",
        "family": "Urbanist-Medium"
      },
      {
        "asset": "./assets/fonts/Urbanist-Regular.ttf",
        "family": "Urbanist-Regular"
      },
      {
        "asset": "./assets/fonts/Urbanist-SemiBold.ttf",
        "family": "Urbanist-SemiBold"
      }
    ]
  }
}
